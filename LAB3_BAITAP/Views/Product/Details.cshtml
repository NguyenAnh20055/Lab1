@model List<LAB3_BAITAP.Models.Product>

<div class="container">
    <h3>THÔNG TIN CÁC SẢN PHẨM</h3>
    <a class="btn btn-primary mb-2" href="/Product/Add">Thêm mới</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("N0") VNĐ</td>
                    <td>
                        <div>
                            <a class="btn btn-warning" href="/Product/Edit?id=@item.Id">Edit</a>
                            <a class="btn btn-danger" href="/Product/Delete?id=@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

